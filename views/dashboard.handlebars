<section>
  <h2>Create New Post</h2>

  <form class="new-post-form" action="/api/posts" method= "post">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="title" />
    </div>
    <div>
      <label for="post-url">comment</label>
      <input id="post-url" name="contents" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
   {{!-- {{> post-info post}} --}}
  <p>{{post.title}}</p>
  <p>{{post.contents}}</p>
      {{!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

